# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ============================================================================
# OpenAI / ChatGPT / Codex Configuration
# ============================================================================
# Get your API key from: https://platform.openai.com/account/api-keys
# Required for: ChatGPT integration, Codex CLI, policy proposal generation
OPENAI_API_KEY=sk-...

# ============================================================================
# Notion Integration
# ============================================================================
# Create an integration at: Settings & Members → Integrations → Develop your own
# Required for: syncing documentation to Notion, meeting notes integration
NOTION_API_KEY=secret_...
NOTION_DATABASE_ID=...

# Optional: Additional Notion page IDs for specific integrations
# NOTION_MEETING_NOTES_PAGE_ID=...
# NOTION_RESEARCH_LOG_PAGE_ID=...

# ============================================================================
# Zotero API Configuration
# ============================================================================
# Generate at: https://www.zotero.org/settings/keys
# Required for: bibliography exports, reference management automation
ZOTERO_API_KEY=...
ZOTERO_LIBRARY_ID=...
ZOTERO_LIBRARY_TYPE=group  # or 'user' for personal library

# ============================================================================
# GitHub Configuration (for local development)
# ============================================================================
# Personal Access Token (PAT) - only needed for custom automation scripts
# Generate at: GitHub Settings → Developer settings → Personal access tokens
# Scopes needed: repo, workflow (if modifying Actions)
# GITHUB_TOKEN=ghp_...

# ============================================================================
# Project-Specific Settings
# ============================================================================
# Python environment settings
PYTHON_VERSION=3.11

# Model preferences for policy generation
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Logging configuration
LOG_LEVEL=INFO
LOG_DIR=logs/

# Output directories
ARTIFACTS_DIR=artifacts/
OUTPUTS_DIR=outputs/
